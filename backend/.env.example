# PostgreSQL. Для Docker: postgresql://user:password@db:5432/realcpa
DATABASE_URL="postgresql://realcpa:realcpa@localhost:5432/realcpa?schema=public"

# API
PORT=3000
JWT_SECRET=your-secret-change-in-production

# Базовый URL API для трекинг-ссылок (например https://api.example.com)
# API_BASE_URL=http://localhost:3000

# Секрет для одноразового восстановления админа (POST /api/restore-admin). Задайте и вызовите эндпоинт один раз, затем можно удалить.
# RESTORE_ADMIN_SECRET=ваш-длинный-секрет
